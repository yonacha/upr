{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <section class="section-grey" id="services">
        <div class="container">
            {% include 'PageTool/page_tools.html.twig' with {'tools':tools} %}
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">{{ 'city_game.score_board'|trans }}</h2>
                </div>
            </div>
            {% if rank %}
            <div class="row">
                <div class="col-lg-12 text-center">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th scope="col">Nazwa</th>
                            <th scope="col">Punkty</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in rank %}
                            <tr>
                                <td>{{ item[0] }}</td>
                                <td>{{ item[1] }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% endif %}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}