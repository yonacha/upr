<div class="card news-card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-2">
                <img src="{{ asset('images/news/' ~ item.image) }}" class="img img-fluid img-80-height"/>
                <p class="text-secondary text-center">15 Minutes Ago by {{ item.inputUser.getName() }}</p>
            </div>
            <div class="col-md-10">
                <p>
                    <a class="float-left" href="https://maniruzzaman-akash.blogspot.com/p/contact.html"><strong>{{ item.title }}</strong></a>
                    <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                    <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                    <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                    <span class="float-right"><i class="text-warning fa fa-star"></i></span>

                </p>
                <div class="clearfix"></div>
                <p>{{ item.description }}</p>

            </div>
        </div>
    </div>
    <div class="bottom-right-fixed">
        <p>
            <a class="float-right btn btn-danger btn-sm ml-2"> <i class="fa fa-thumbs-down"></i> Dislike</a>
            <a class="float-right btn text-white btn-success btn-sm"> <i class="fa fa-thumbs-up"></i> Like</a>
        </p>
    </div>
</div>