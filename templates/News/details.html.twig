{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/news/news.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
    <section class="section-grey" id="services">
        <div class="container">
            {% include 'PageTool/page_tools.html.twig' with {'tools':tools} %}
            <div class="row">
                <div class="col-lg-12 text-center">
                    {% include 'News/news.html.twig' with {'item':news} %}
                </div>
            </div>
            {% if comments is not null %}
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="card">
                        <div class="card-body">
                            <strong>
                                {{ 'comments.comments'|trans }}:
                            </strong>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="card">
                        <div class="card-body">
                            <div class="comments">
                                {% include 'Comment/comment.html.twig' with {'comments':comments} %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            {% if app.user %}
                <div class="row">
                    <div class="col-lg-12 text-center">
                        {{ form_start(form) }}
                        {{ form_row(form.content) }}

                        <input type="submit" class="btn" value="{{ 'add'|trans }}" />
                        {{ form_end(form) }}
                    </div>
                </div>
            {% else %}
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="card">
                        <div class="card-body">
                            {{ 'comments.sign_in_to_comment'|trans }}
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/news/likes.js') }}"></script>
{% endblock %}